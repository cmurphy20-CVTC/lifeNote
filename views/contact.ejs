<%- include("partials/header"); -%>    
    
    <div class="container mx-auto pt-1 ">

        <div class="">
          <div class=" col-12 ">
            <div class="card border-gradient">
              <div class="animateForm card-body">
      
                <!--  -->
                <form action="/sendEmail" method="POST">
                  <h1 class="form-title">Contact Us</h1>

                  <p id="contactP"><%= msg %></p>
                 
                  <div class="form-group">
                    <label class="form-label" for="name">Name:</label>
                    <input type="text" class="form-control" name="name">
                  </div>
                  <div class="form-group">
                    <label class="form-label" for="email">Email:</label>
                    <input type="email" class="form-control" name="email">
                  </div>
                  <div class="form-group">
                    <label class="form-label" for="tel">Phone Number:</label>
                    <input type="tel" class="form-control" name="phone">
                  </div>
                  <div class="form-group">
                    <label class="form-label">Message:</label>
                    <textarea class="form-control" name="message" rows="5" cols="30"></textarea>
                  </div>
                  <button type="submit" class="btn btn-dark">Submit</button>
                </form>
      
              </div>
            </div>
          </div>
        </div>
    </div>

<%- include("partials/footer"); -%>
