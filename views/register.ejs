<%- include("partials/header"); -%>
    
<div class="container mt-5">

  <div class="row">
    <div class=" col-sm-8">
      <div class="regLogForm card">
        <div class="card-body border-gradient">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <h1 class="form-title">Create An Account</h1>
            <div class="form-group">
              <label class="form-label" for="firstName">First Name:</label>
              <input type="text" class="form-control" name="firstName">
            </div>
            <div class="form-group">
              <label class="form-label" for="lastName">Last Name:</label>
              <input type="text" class="form-control" name="lastName">
            </div>
            <div class="form-group">
              <label class="form-label" for="email">Email:</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label class="form-label" for="email">Confirm Email:</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label class="form-label" for="password">Password:</label>
              <input type="password" class="form-control" name="password" autocomplete="none">
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card body border-gradient">
        <h1 class="form-title">Register With:</h1>
        <div class="card-body">
          <img id="logo" src="/images/icons8-google-60.png" alt="Google Logo">
          <a id="googleBtn" class="btn btn-lg" href="/auth/google" role="button">
            
            Google
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer"); -%>