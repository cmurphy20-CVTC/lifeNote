<%- include("partials/header"); -%>

<h3>Edit Profile</h3>

<a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>

<div class="row">
  <div class="col-sm-8">
    <div class="card">
      <div class="card-body">

        <h3>Change Your Profile Color</h3>
        <!-- Makes POST request to /editProfile route -->
        <form action="/editProfileColor" method="POST">
          <div class="form-group">
            
            <input id="forDefault" type="button" class="color form-control" name="defaultColor" value="Default">
          </div>
          <div class="form-group">
            
            <input id="forBlue" type="button" class="color form-control" name="blue" value="Blue">
          </div>
          <div class="form-group">
            
            <input id="forRed" type="button" class="color form-control" name="red" value="Red">
          </div>
          <div class="form-group">
            
            <input id="forPurple" type="button" class="color form-control" name="purple" value="Purple">
          </div>
          <!-- <button id="changePassBtn" type="submit" class="btn btn-dark">Change Color</button> -->
        </form>

        <h3>Change Your Password</h3>

        <!-- Makes POST request to /editProfile route -->
        <form action="/editProfile" method="POST">
          <div class="form-group">
            <label for="password">Current Password</label>
            <input type="password" class="form-control" name="currentPassword">
          </div>
          <div class="form-group">
            <label for="password">New Password</label>
            <input id="newPassword" type="password" class="form-control" name="newPassword">
          </div>
          <button id="changePassBtn" type="submit" class="btn btn-dark">Change Password</button>
        </form>

      </div>
    </div>
  </div>
</div>


<%- include("partials/footer"); -%>